@model RegisterForm.tbl_userdetails
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<head>
    <link href="~/Stylesheet/Loginsheet.css" rel="stylesheet" />
</head>

<body>
    <div id="LoginLayout">
        <div class="row">

            <div class="col-lg-6" id="Loginimg">
                <img src="~/Image/admin-login.jpg" alt="Alternate Text" class="img-responsive" />
            </div>

            <div class="col-lg-6" id="Loginform">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    <h3>Login Form</h3>
                    <form class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-pull-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    @Html.EditorFor(model => model.User_Name, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "User Name" } })
                                    @Html.ValidationMessageFor(model => model.User_Name, "", new { @class = "text-danger" })
                                </div>

                            </div>
                        </div>
                        <br />
                            <div class="form-group">
                            <div class="col-md-pull-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "*********" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-pull-10">

                                <input type="submit" value="Login" class="btn btn-success" />
                            </div>
                        </div>
                    </form>

                }
            </div>


        </div>
    </div>

</body>